*{
   margin: 0;
   padding: 0;
    font-family: 'Courier New', Courier, monospace; 
}
.contenedor{
    width: 800px;
    height: 600px;
    background-color: none;
    margin: 0.5em auto;
    padding: 0.5em;
    border-radius: 20px;
}

body {
    background-image: url('../images/best-food-background-ydy5u31lnrmww1pk.jpg');
    background-size: cover;
    background-position: center;
}
#imagenlogin {
  display: block;
  margin: 10px auto;    
  max-width: 150px;
  height: auto;
  border-radius: 5px;
}

/*ESTO HACE PARTE DEL HEADER*/
#header{
    height: 12%;
    width: 95%;
    background-color: none;
    border-radius: 1em;
    margin: 12px;
}
#letreroapp{
    text-align: center;
    padding: 25px;
    font-size: 30px;
    text-shadow: 
    -1px -1px 0 black, 
    1px -1px 0  black,  
    -1px 1px 0  black,  
    1px 1px 0  black;   
    color: white;
}
#msg_log{
    color: white;
    font-size: 20px;
    text-shadow: 
    -1px -1px 0 black, 
    1px -1px 0  black,  
    -1px 1px 0  black,  
    1px 1px 0  black;   
    text-align: center;
}
/*ESTO ES PARTE DEL CONTENIDO*/
.form-control{
    height: 45px;
    width: 80%;
    background-color: white;
    border-radius: 10px;
    margin: 8px;
    margin-left: 67px;
    text-align: center;
    font-size: medium;
    border-color: green;
}
/*ESTO ES PARTE DEL FOOTER*/
.botonesinicio{
    height:50px;
    width:40%;
    color: green;
    margin-left:30%;
    background-color: white;
    font-size: 20px;
    border-radius: 20px;
    border-color: green;
}
.iconosbotones{
    width: 25px;
    height: 25px;
    color: green;
    float: left;
    margin-left: 20px;
}
.botonesinicio:hover {
    background-color: green;
    color: white;
}

.botonesinicio:hover .iconosbotones {
    color: white;
}

.iconosbotones{
    width: 25px;
    height: 25px;
    color: green;
    transition: all 0.3s ease;
}