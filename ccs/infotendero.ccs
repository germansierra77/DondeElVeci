*{
    margin: 0;
    padding: 0;
    font-family: 'Courier New', Courier, monospace;
}
.contenedor{
    width: 800px;
    height: 600px;
    background-color: none;
    margin: 0.5em auto;
    padding: 0.5em;
    border-radius: 20px;
}
body {
    background-image: url('../images/best-food-background-ydy5u31lnrmww1pk.jpg');
    background-size: cover;
    background-position: center;
}
#header{
    width:96%;
    height: 15%;
    display: flex;
    justify-content: center;
    align-items: center; 
    background-color: none;
    padding: 10px;
    border-radius: 10px;
    position: relative;
}
.elemento{
    height: 60%;
    width: 80%;
    color: white;
    text-align:center;
    position: initial;
    background-color:none;
    border-radius: 10px;
    font-size: 50px;
    text-shadow: 
    -1px -1px 0 black, 
    1px -1px 0  black,  
    -1px 1px 0  black,  
    1px 1px 0  black;  
    color: white;
}
#imagenlogo{
    width: 80px;
    height: 70px;
    float: right;
    border-radius: 10px;
}
.contenido{
    background-color:none;
    height: 65%;
    width: 98%;
    border-radius: 10px;
    margin-top: 8px;
    padding: 2px;
}
.form-floating{
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    font-size: 28px;
    width: 100%;
    margin: 2px;
    text-shadow: 
    -1px -1px 0 black, 
    1px -1px 0  black,  
    -1px 1px 0  black,  
    1px 1px 0  black;   
    color: white;
}
.casillasinfo{
    width: 600px;
    font-size:25px;
    border-color: green;
    text-align: center;
    margin: 2px;
    border-radius: 10px;
    background-color: white;
} 
.footer{
    height: 13%;
    width: 98%;
    background-color: none;
    border-radius: 1em;
    margin-top: 8px;
    border-color: white;
}
.botonesfooter{
    width: 200px;
    height: 60px;
    font-size:25px;
    color: green;
    background-color: white;
    margin-left: 47px;
    border-radius:15px;
    margin-top: 10px;
    text-align: center;
    border-color: green;
}
.iconosbotones{
    width: 25px;
    height: 25px;
    color: green;
    float: left;
    margin-left: 20px;
    border-color: green;
}
.iconosbotones{
    width: 25px;
    height: 25px;
    color: green;
    float: left;
    margin-left: 20px;
}
.botonesfooter:hover {
    background-color: green;
    color: white;
}

.botonesfooter:hover .iconosbotones {
    color: white;
}

.iconosbotones{
    width: 25px;
    height: 25px;
    color: green;
    transition: all 0.3s ease;
}